<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Connection">
            <items>
                  <RadioMenuItem mnemonicParsing="false" text="Wi-Fi">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleGroupConnectionType" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" selected="true" text="Serial" toggleGroup="$toggleGroupConnectionType">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </RadioMenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <Menu fx:id="menuBaudRate" mnemonicParsing="false" text="Baudrate" />
                  <Menu fx:id="menuSerialPort" mnemonicParsing="false" text="Serial port" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="menuItemConnect" mnemonicParsing="false" onAction="#connect" text="Connect">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="menuItemDisconnect" mnemonicParsing="false" onAction="#disconnect" text="Disconnect">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="D" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Messanger">
               <content>
                  <VBox spacing="5.0">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <TextField fx:id="textFieldOutput" onKeyPressed="#sendFromTextField" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#sendFromTextField" text="Send" />
                           </children>
                        </HBox>
                        <ScrollPane fx:id="textFlowContainer" VBox.vgrow="ALWAYS">
                           <content>
                              <TextFlow/>
                           </content>
                        </ScrollPane>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
          <Tab text="Map" />
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Label text="Connection status:" />
            <Label fx:id="labelConnectionStatus" text="not connected" />
            <Separator orientation="VERTICAL" />
            <Label text="Receive" />
            <Circle radius="8.0" stroke="BLACK" strokeType="INSIDE">
               <fill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop color="#c3c3c3" />
                        <Stop color="#616161" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </fill></Circle>
          <Button mnemonicParsing="false" text="Button" />
        </items>
      </ToolBar>
   </bottom>
   <right>
      <VBox fx:id="vBoxLeft" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="5.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                  <RowConstraints vgrow="NEVER" />
                  <RowConstraints vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <Button fx:id="buttonForward" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Forward" GridPane.columnIndex="1" />
                  <Button fx:id="buttonLeft" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Left" GridPane.rowIndex="1" />
                  <Button fx:id="buttonStop" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Stop" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="buttonRight" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Right" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button fx:id="buttonBackward" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Backward" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Slider fx:id="sliderAzimuth" majorTickUnit="10.0" max="360.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" GridPane.columnSpan="3" GridPane.rowIndex="4" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </right>
</BorderPane>
